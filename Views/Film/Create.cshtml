@model FilmProjem.Models.Film

<div class="container mt-4">
    <h4>Yeni Film Bilgileri</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="mb-3">
                    <label class="form-label">Film Adı</label>
                    <input asp-for="Ad" class="form-control" placeholder="Örn: Inception" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Tür</label>
                    <input asp-for="Tur" class="form-control" placeholder="Örn: Bilim Kurgu" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Yayın Yılı</label>
                    <input asp-for="Yil" class="form-control" type="number" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Yönetmen</label>
                    <input asp-for="Yonetmen" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Afiş Resim Linki (URL)</label>
                    <input asp-for="AfisUrl" class="form-control" placeholder="https://..." />
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>