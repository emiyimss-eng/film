@model IEnumerable<FilmProjem.Models.Film>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Film Arşivi</h1>
        <a asp-action="Create" class="btn btn-primary">Yeni Film Ekle</a>
    </div>

    <hr />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.AfisUrl" class="card-img-top" alt="Film Afişi" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Ad</h5>
                        <p class="card-text text-muted">@item.Tur | @item.Yil</p>
                        <p class="card-text"><strong>Yönetmen:</strong> @item.Yonetmen</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger w-100" onclick="return confirm('Bu filmi silmek istediğinize emin misiniz?')">Filmi Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>