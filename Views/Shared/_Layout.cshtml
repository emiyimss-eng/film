<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmProjem</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        /* Tüm Sitenin Karanlık Teması */
        body { 
            background-color: #0b0b0b !important; 
            color: #e0e0e0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Şeffaf ve Modern Menü Çubuğu */
        .navbar { 
            background: rgba(18, 18, 18, 0.98) !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
            padding: 15px 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            color: #c2185b !important; /* Vişne/Pembe tonu */
            font-weight: 800;
        }

        .nav-link {
            color: #ffffff !important;
            margin: 0 10px;
            font-weight: 500;
            transition: 0.3s;
        }

        .nav-link:hover {
            color: #c2185b !important;
        }

        /* Sayfa Alt Bilgisi */
        footer { 
            background: #121212; 
            padding: 25px 0; 
            margin-top: 50px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .footer-link {
            color: #c2185b;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-film"></i> FilmProjem
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Film" asp-action="Index" style="color: #c2185b !important;">
                                <i class="bi bi-collection-play"></i> Filmlerimiz
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Home" asp-action="Privacy">Hakkımda</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer text-muted text-center">
        <div class="container">
            <p class="mb-0 text-white-50 small">
                &copy; 2025 - <span class="text-white fw-bold">Yozgat Bozok Üniversitesi</span> - 
                <a asp-controller="Home" asp-action="Privacy" class="footer-link">Hakkımda</a>
            </p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>